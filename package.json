{
  "name": "syxbot-api",
  "version": "1.0.0",
  "description": "",
  "private": true,
  "author": "Tom Rooman",
  "scripts": {
    "start-log": "yarn npm-run-all build server log-prod",
    "start": "yarn npm-run-all build server",
    "server": "pm2 start dist/index.js --name syxbot_prod_api",
    "dev": "yarn rimraf dist && yarn ts-node-dev --respawn --transpile-only --clear index.ts",
    "dev-server": "yarn pm2 start index.js --watch --name syxbot_dev_api && npm run log-dev",
    "test": "yarn tsc && yarn mocha ./dist/lib/test/index.test.js --exit",
    "log-dev": "yarn pm2 log --lines 100 syxbot_dev_api ",
    "log-prod": "yarn pm2 log --lines 100 syxbot_prod_api",
    "eslint": "eslint ./",
    "status": "yarn pm2 status",
    "clean": "rimraf dist",
    "transpile": "yarn tsc && yarn rimraf dist/test",
    "remove-modules": "yarn rimraf node_modules .yarn/build-state.yml .yarn/cache .yarn/install-state.gz .yarn/unplugged .pnp.js yarn.lock package-lock.json",
    "build": "yarn npm-run-all clean transpile",
    "stop-dev": "yarn pm2 stop syxbot_dev_api",
    "stop-prod": "yarn pm2 stop syxbot_prod_api",
    "stop-all": "yarn pm2 stop all"
  },
  "dependencies": {
    "axios": "^0.19.2",
    "bcrypt": "^5.0.0",
    "body-parser": "^1.19.0",
    "chalk": "^4.1.0",
    "dateformat": "^3.0.3",
    "express": "^4.17.1",
    "jsonwebtoken": "^8.5.1",
    "lodash": "^4.17.19",
    "mongoose": "^5.9.27",
    "nodemailer": "^6.4.11",
    "npm-run-all": "^4.1.5",
    "pm2": "^4.4.0",
    "querystring": "^0.2.0",
    "rimraf": "^3.0.2",
    "universal-cookie-express": "^4.0.3"
  },
  "devDependencies": {
    "@types/body-parser": "^1.19.0",
    "@types/dateformat": "^3.0.1",
    "@types/express": "^4.17.7",
    "@types/lodash": "^4.14.158",
    "@types/mocha": "^8.0.1",
    "@types/mongoose": "^5.7.34",
    "@types/node": "^14.0.27",
    "@typescript-eslint/eslint-plugin": "^3.7.1",
    "@typescript-eslint/parser": "^3.7.1",
    "chai": "^4.2.0",
    "eslint": "^7.6.0",
    "mocha": "^8.1.0",
    "ts-node-dev": "^1.0.0-pre.56",
    "typescript": "^3.9.7"
  }
}
