{
  "name": "syxbot-api",
  "version": "1.0.0",
  "description": "",
  "scripts": {
    "start-log": "yarn npm-run-all build server log-prod",
    "start": "yarn npm-run-all build server",
    "server": "pm2 start dist/index.js --name syxbot_prod_api",
    "dev": "yarn rimraf dist && yarn tsc && yarn concurrently \"yarn tsc --watch\" \"yarn pm2 start dist/index.js --watch --name syxbot_dev_api\" \"npm run log-dev\"",
    "test": "yarn tsc && yarn mocha ./dist/lib/test/index.test.js --exit",
    "log-dev": "yarn pm2 log --lines 100 syxbot_dev_api ",
    "log-prod": "yarn pm2 log --lines 100 syxbot_prod_api",
    "eslint": "eslint ./",
    "status": "yarn pm2 status",
    "clean": "rimraf dist",
    "transpile": "yarn tsc",
    "remove-modules": "yarn rimraf node_modules .yarn/build-state.yml .yarn/cache .yarn/install-state.gz .yarn/unplugged .pnp.js yarn.lock package-lock.json",
    "build": "yarn npm-run-all clean transpile",
    "stop-dev": "yarn pm2 stop syxbot_dev_api",
    "stop-prod": "yarn pm2 stop syxbot_prod_api",
    "stop-all": "yarn pm2 stop all"
  },
  "private": true,
  "author": "Tom Rooman",
  "license": "GPL-3.0-only",
  "dependencies": {
    "axios": "^0.19.2",
    "body-parser": "^1.19.0",
    "chai": "^4.2.0",
    "chalk": "^4.1.0",
    "dateformat": "^3.0.3",
    "express": "^4.17.1",
    "global": "^4.4.0",
    "lodash": "^4.17.19",
    "mongoose": "^5.9.23",
    "nodemailer": "^6.4.10",
    "npm-run-all": "^4.1.5",
    "pm2": "^4.4.0",
    "querystring": "^0.2.0",
    "rimraf": "^3.0.2"
  },
  "devDependencies": {
    "@types/body-parser": "^1.19.0",
    "@types/dateformat": "^3.0.1",
    "@types/express": "^4.17.7",
    "@types/lodash": "^4.14.158",
    "@types/mocha": "^8.0.0",
    "@types/mongoose": "^5.7.32",
    "@types/node": "^14.0.26",
    "@typescript-eslint/eslint-plugin": "^3.7.0",
    "@typescript-eslint/parser": "^3.7.0",
    "concurrently": "^5.2.0",
    "eslint": "^7.4.0",
    "mocha": "^8.0.1",
    "typescript": "^3.9.7"
  }
}
