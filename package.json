{
  "name": "syxbot-api",
  "version": "1.0.0",
  "description": "",
  "private": true,
  "author": "Tom Rooman",
  "scripts": {
    "start-log": "yarn build && yarn server && yarn log-prod",
    "start": "yarn build && yarn server",
    "start:container:log": "yarn start:container && yarn shell:container",
    "start:container": "docker run --network=host --restart=always -d --name syxbot-api syxbot-api",
    "shell:container": "docker exec -it syxbot-api sh",
    "tag:container": "docker tag syxbot-api syxbot.com:5000/syxbot-api",
    "push:container": "docker push syxbot.com:5000/syxbot-api",
    "deploy:container": "yarn build:container && yarn tag:container && yarn push:container",
    "server": "yarn pm2 start dist/index.js --name syxbot_prod_api",
    "build:container": "docker image prune -f && yarn cp:ssl:files && yarn cp:master:config && docker build -t syxbot-api . && yarn cp:dev:config",
    "cp:master:config": "rm config.json && cp 'private/config - master.json' ./ && mv 'config - master.json' config.json",
    "cp:dev:config": "rm config.json && cp 'private/config - dev.json' ./ && mv 'config - dev.json' config.json",
    "dev": "yarn cp:ssl:files && yarn ts-node-dev --respawn --transpile-only --clear index.ts",
    "test": "NODE_ENV=test && yarn tsc && yarn mocha ./dist/tests/index.test.js --exit",
    "coverage": "NODE_ENV=test && yarn tsc && nyc yarn mocha ./dist/tests/index.test.js --exit",
    "log-dev": "yarn pm2 log --lines 100 syxbot_dev_api ",
    "log-prod": "yarn pm2 log --lines 100 syxbot_prod_api",
    "eslint": "eslint ./",
    "cp:ssl:files": "rm -rf cert/ && mkdir cert/ && cp /etc/letsencrypt/live/syxbot.com/cert.pem cert/ && cp /etc/letsencrypt/live/syxbot.com/privkey.pem cert/",
    "status": "yarn pm2 status",
    "clean": "rm -rf dist",
    "stop:mongo": "docker stop mongoDB && docker container rm mongoDB",
    "start:mongo": "docker run -p 27017:27017 -v /data/db:/data/db -d --restart=always --name mongoDB mongo mongod --auth",
    "transpile": "yarn tsc && rm -rf dist/test",
    "remove:containers": "docker rm $(docker ps -a -q)",
    "remove:untagged": "docker rmi -f $(docker images | grep '<none>')",
    "remove-modules": "rm -rf node_modules .yarn/build-state.yml .yarn/cache .yarn/install-state.gz .yarn/unplugged .pnp.js yarn.lock package-lock.json",
    "build": "yarn clean && yarn transpile",
    "stop-dev": "yarn pm2 stop syxbot_dev_api",
    "stop:container": "docker stop syxbot-api && docker container rm syxbot-api",
    "stop-prod": "yarn pm2 stop syxbot_prod_api",
    "stop-all": "yarn pm2 stop all"
  },
  "dependencies": {
    "axios": "^0.20.0",
    "bcrypt": "^5.0.0",
    "body-parser": "^1.19.0",
    "chai-http": "^4.3.0",
    "chalk": "^4.1.0",
    "dateformat": "^3.0.3",
    "express": "^4.17.1",
    "jsonwebtoken": "^8.5.1",
    "lodash": "^4.17.20",
    "mongoose": "^5.10.9",
    "nodemailer": "^6.4.13",
    "pm2": "^4.5.0",
    "querystring": "^0.2.0",
    "universal-cookie-express": "^4.0.3"
  },
  "devDependencies": {
    "@types/body-parser": "^1.19.0",
    "@types/dateformat": "^3.0.1",
    "@types/express": "^4.17.8",
    "@types/lodash": "^4.14.162",
    "@types/mocha": "^8.0.3",
    "@types/mongoose": "^5.7.36",
    "@types/node": "^14.11.8",
    "@typescript-eslint/eslint-plugin": "^4.4.0",
    "@typescript-eslint/parser": "^4.4.0",
    "chai": "^4.2.0",
    "eslint": "^7.11.0",
    "mocha": "^8.1.3",
    "nyc": "^15.1.0",
    "ts-node-dev": "^1.0.0-pre.63",
    "typescript": "^4.0.3"
  }
}
