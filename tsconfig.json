{
    "compilerOptions": {
        "module": "commonjs",
        "esModuleInterop": true,
        "target": "es5",
        "lib": [
            "es2020",
            "dom"
        ],
        "strict": true,
        "noImplicitAny": false,
        "moduleResolution": "node",
        "sourceMap": false,
        "allowJs": false,
        "resolveJsonModule": true,
        "skipLibCheck": true,
        "declaration": false,
        "outDir": "./dist",
        "baseUrl": "./"
    },
    "include": [
        "./index.ts",
        "./lib/**/*"
    ],
    "exclude": [
        ".yarn",
        "node_modules",
        "**/*.spec.ts"
    ]
}